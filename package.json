	},
	"dependencies": {
		"@hono/oidc-auth": "^1.7.0",
		"@inquirer/prompts": "^7.8.6",
		"cli-progress": "^3.12.0",
		"cli-table3": "^0.6.5",
		"hono": "^4.9.8",
