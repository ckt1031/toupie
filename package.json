		"@types/node": "^24.3.0",
		"typescript": "^5.9.2",
		"vercel": "^46.0.2",
		"wrangler": "^4.32.0"
	},
	"dependencies": {
		"chalk": "^5.6.0",
		"cli-progress": "^3.12.0",
		"cli-table3": "^0.6.5",
		"itty-router": "^5.0.22",
		"slugify": "^1.6.6",
		"zod": "^4.0.17"
	}
